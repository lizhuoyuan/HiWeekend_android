<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8E8E8" >

    <LinearLayout
        android:id="@+id/all_order_listview_adapter_cinema_xiang"
        android:layout_width="match_parent"
        android:layout_height="0dp"  
        android:orientation="horizontal"
        android:clickable="true" 
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/all_order_listview_adapter_c_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.38"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/all_order_listview_adapter_mo_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="right|center"
            android:text="TextView"
            android:textSize="12sp"
            android:textColor="#FF0000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_order_listview_adapter_move_order_xiang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        android:orientation="horizontal"
        android:clickable="true" 
        android:layout_weight="2"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/all_order_listview_adapter_mo_poster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
           
            android:src="@drawable/ic_launcher"
             />

        <TextView
            android:id="@+id/all_order_listview_adapter_m_introduce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:lines="3"           
            android:ellipsize="end"  
            android:maxEms="10"
            android:text="TextView" 
            android:textSize="18sp"/>

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:orientation="vertical" 
     android:layout_margin="5dp"
     android:gravity="center">
     
     <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
    <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="x"/>
     <TextView
         android:id="@+id/all_order_listview_adapter_count"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="TextView" />
</LinearLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="总计"
         android:textColor="#FF0000"
         android:layout_marginTop="5dp"/>
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
       <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="¥"
         android:textColor="#FF0000"/>
     <TextView
         android:id="@+id/all_order_listview_adapter_mo_price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="right|center"
         android:text="TextView"
         android:textColor="#FF0000"
          />
     </LinearLayout>

 </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.98"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.80"
                android:gravity="right|center"
                android:text="时间"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/all_order_listview_adapter_shiji_mo_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.83"
                android:gravity="center"
                android:text="textview"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="2.00"
            android:orientation="horizontal" 
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/all_order_listview_adapter_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="取消订单" 
                android:visibility="visible"
                android:clickable="true"
                android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                />

            <Button
                android:id="@+id/all_order_listview_adapter_delete_order"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="删除订单" 
                android:visibility="visible"
                android:clickable="true"
                 android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="5dp"
               />

            <Button
                android:id="@+id/all_order_listview_adapter_payer_order"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="付款" 
                android:visibility="visible"
                android:clickable="true"
                android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/all_order_listview_adapter_discuss_order"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:clickable="true"
                android:text="评价"
                android:visibility="visible" 
                 android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>